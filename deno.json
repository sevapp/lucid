{
  "name": "@vseplet/luminous",
  "version": "1.0.1",
  "exports": "./source/mod.ts",
  "lock": false,
  "test": {
    "files": {
      "include": [
        "tests/"
      ]
    }
  },
  "tasks": {
    "example:hierarchy": "deno run --allow-all ./examples/hierarchy.ts",
    "example:simple": "deno run --allow-all ./examples/simple.ts",
    "build-npm": "deno run --allow-all ./scripts/build-npm.ts",
    "update-semver-deploy-jsr": "deno run --allow-all --unstable-broadcast-channel --unstable-kv ./update-semver-deploy-jsr.workflow.ts"
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-slow-types"
      ]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 70,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": [
        ".vscode",
        ".idea",
        ".fleet",
        ".git",
        "./source/versions.ts"
      ]
    }
  },
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  }
}
