{
  "name": "@vseplet/luminous",
  "version": "1.0.4",
  "exports": {
    ".": "./source/mod.ts",
    "./Formatter": "./source/Formatter.ts"
  },
  "workflows": {
    "UpdateSemverDeployJsr": {
      "versionsFilePath": "./source/versions.ts"
    }
  },
  "lock": false,
  "test": {
    "files": {
      "include": [
        "tests/"
      ]
    }
  },
  "tasks": {
    "example:hierarchy": "deno run --allow-all ./examples/hierarchy.ts",
    "example:simple": "deno run --allow-all ./examples/simple.ts"
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-slow-types"
      ]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 70,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": [
        ".vscode",
        ".idea",
        ".fleet",
        ".git",
        "./source/versions.ts"
      ]
    }
  },
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  }
}